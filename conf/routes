# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


#survey entries
GET      /Surveyors             controllers.SurveyorsController.getAllSurveyentries()
POST     /Surveyors             controllers.SurveyorsController.addNewSurveyEntry()
GET      /Surveyors/:id         controllers.SurveyorsController.getSurveyEntryByID(id:Integer)
DELETE   /Surveyors/:id         controllers.SurveyorsController.deleteSurveyEntry(id:Integer)

#survey details
GET       /Surveys                 controllers.SurveysController.getAllSurveys()
POST      /Surveys                controllers.SurveysController.addNewSurvey()
GET       /Surveys/:id             controllers.SurveysController.getSurveyByID(id:Integer)
DELETE    /Surveys/:id             controllers.SurveysController.deleteSurvey(id:Integer)


GET       /users                controllers.UsersController.getAllUsers()
POST       /users                       controllers.UsersController.addUser()

